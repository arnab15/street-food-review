<%- include('../partials/header') %>
<div class="container">
  <header class="jumbotron text-center">
    <div class="container">
      <h1>Welcome to Street Food Factory</h1>
      <p>View All Street Foods from all over the world</p>
      <p>
        <a class="btn btn-primary btn-large" href="/campgrounds/new"
          >Add New Street Food</a
        >
      </p>
    </div>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap">
    <% campGrounds.forEach((campground)=>{ %>
    <div class="col-md-3 col-sm-6">
      <div class="img-thumbnail">
        <img
          style="height: 250px; width: 100%"
          src="<%=campground.image %> "
          alt="camp images"
        />
        <div class="caption">
          <h4><%= campground.name %></h4>
        </div>
        <p>
          <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary"
            >More Info</a
          >
        </p>
      </div>
    </div>
    <% });%>
  </div>
</div>
<%- include('../partials/footer') %>
