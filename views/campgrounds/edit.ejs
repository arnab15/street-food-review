<%- include('../partials/header') %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 25px">
      Edit <%= campground.name %>
    </h1>
    <div style="width: 35%; margin: 30px auto">
      <form
        action="/campgrounds/<%=campground._id %>?_method=PATCH"
        method="POST"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[name]"
            value="<%= campground.name %> "
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[image]"
            value="<%= campground.image %> "
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="campground[description]"
            value="<%= campground.description %> "
          />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-block btn-primary">submit</button>
        </div>
      </form>
      <a style="text-decoration: none" href="/campgrounds">View Campgrounds</a>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
