<%- include('../partials/header') %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 25px">
      Add new Comment to <%= campground.name %>
    </h1>
    <div style="width: 35%; margin: 30px auto">
      <form action="/campgrounds/<%= campground._id %>/comments " method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            placeholder="comment text"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[author]"
            placeholder="Author"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-block btn-primary">submit</button>
        </div>
      </form>
      <a style="text-decoration: none" href="/campgrounds">View Campgrounds</a>
    </div>
  </div>
</div>
