<%- include('./partials/header') %> <%- include('./partials/navbar') %>

<div class="container">
  <div>
    <h1 style="text-align: center; margin-top: 25px">
      Create a New Campground
    </h1>
    <div style="width: 35%; margin: 30px auto">
      <form action="/campgrounds" method="POST">
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="name"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="image"
            placeholder="image Url"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-md btn-block btn-primary">submit</button>
        </div>
      </form>
      <a style="text-decoration: none" href="/campgrounds">View Campgrounds</a>
    </div>
  </div>
</div>
